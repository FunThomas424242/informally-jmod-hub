        <ac:var name="module.id" value="org.apache.httpcomponents.httpcore"/>
        <ac:var name="version" value="4.4.12"/>
        <ac:var name="m2.path" value="${user.home}/.m2/repository/"/>


        <exec executable="${jdeps}">
